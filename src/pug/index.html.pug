include setting

doctype html
html(lang="ja")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="theme-color", content="#000000")
        meta(name="description", content="Web Picture Puzzle")
        title Picture Puzzle
    body
        noscript You need to enable JavaScript to run this app.
        div.scenes
            div.scene#setting
                + Setting(false)
            div.scene#deviceCheck
                div Click Anywhere to start!!
            div.scene#game
                include game
        div#overlay
            .background#background_suggest
                canvas#suggest_canvas(width="640" height="400")
            .background#background_setting
                + Setting(true, '_')
